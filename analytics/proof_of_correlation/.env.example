# =============================================================================
# HRKey Correlation Engine - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# Supabase Postgres Connection URL
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Example: postgresql://postgres:mypassword@db.myproject.supabase.co:5432/postgres
SUPABASE_DB_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_PROJECT.supabase.co:5432/postgres

# Supabase Service Role Key (optional, for REST API access)
# Find this in your Supabase project settings under API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# -----------------------------------------------------------------------------
# Analysis Configuration (OPTIONAL - defaults provided)
# -----------------------------------------------------------------------------

# Minimum number of samples required to compute correlation (default: 30)
MIN_SAMPLES_FOR_CORRELATION=30

# Statistical significance threshold for p-values (default: 0.05)
SIGNIFICANCE_THRESHOLD=0.05

# Train/test split ratio for ML models (default: 0.7 = 70% train, 30% test)
TRAIN_TEST_SPLIT=0.7

# Random seed for reproducibility (default: 42)
RANDOM_STATE=42

# Logging level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Verbose output (default: true)
VERBOSE=true

# -----------------------------------------------------------------------------
# Feature Engineering (OPTIONAL)
# -----------------------------------------------------------------------------

# Strategy for filling missing values: median, mean, drop (default: median)
FILL_MISSING_STRATEGY=median

# Whether to normalize features (default: true)
NORMALIZE_FEATURES=true

# -----------------------------------------------------------------------------
# API Configuration (OPTIONAL - for FastAPI server)
# -----------------------------------------------------------------------------

# API host (default: 0.0.0.0)
API_HOST=0.0.0.0

# API port (default: 8000)
API_PORT=8000

# CORS allowed origins (comma-separated, * for all)
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# Notes:
# -----------------------------------------------------------------------------
# 1. Keep this file secure and never commit it to version control
# 2. The .gitignore should already exclude .env files
# 3. All team members should have their own .env file with their credentials
# 4. For production, use secure secret management (e.g., Vault, AWS Secrets Manager)
