# ============================================================================
# HRKey Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
#
# IMPORTANT: Never commit .env to git (it's in .gitignore)
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# STRIPE CONFIGURATION (REQUIRED for payments)
# ============================================================================
# Get these from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# RESEND EMAIL CONFIGURATION (REQUIRED for emails)
# ============================================================================
# Get from: https://resend.com/api-keys

RESEND_API_KEY=re_...

# ============================================================================
# OPENAI CONFIGURATION (REQUIRED for AI refinement feature)
# ============================================================================
# Get from: https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# URL CONFIGURATION
# ============================================================================

# Frontend URL (where your Vercel deployment is hosted)
FRONTEND_URL=https://your-app.vercel.app

# Backend URL (where your Render deployment is hosted)
BACKEND_PUBLIC_URL=https://your-backend.onrender.com

# ============================================================================
# ADMIN CONFIGURATION (OPTIONAL)
# ============================================================================

# Email of the user who should be auto-assigned as superadmin
HRKEY_SUPERADMIN_EMAIL=admin@yourdomain.com

# ============================================================================
# SERVER CONFIGURATION (OPTIONAL)
# ============================================================================

# Port for local development (Render auto-assigns in production)
PORT=3001

# Node environment
NODE_ENV=development
