################################################################################
# HRKey App - Environment Variables Template
################################################################################
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
################################################################################

# ==============================================================================
# DEPLOYMENT ENVIRONMENT
# ==============================================================================
# Options: development, staging, production
NODE_ENV=development

# ==============================================================================
# URLS (CRITICAL - Read carefully)
# ==============================================================================
# PUBLIC_BASE_URL: The public-facing URL of your FRONTEND
#   - Local: http://localhost:3000
#   - Production: https://hrkey.xyz
PUBLIC_BASE_URL=http://localhost:3000

# API_BASE_URL: The public-facing URL of your BACKEND (if different from frontend)
#   - Same server: Leave empty or set to same as PUBLIC_BASE_URL
#   - Separate backend: https://api.hrkey.xyz or https://hrkey-backend.railway.app
API_BASE_URL=http://localhost:3001

# PORT: Backend server port (only needed for backend)
PORT=3001

# VERCEL_URL: Auto-injected by Vercel (do not set manually)
# Used as fallback if PUBLIC_BASE_URL is not set in production

# ==============================================================================
# DATABASE (Supabase / PostgreSQL)
# ==============================================================================
# Get these from: Supabase Dashboard → Settings → API
# Required for both frontend and backend

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Frontend public variables (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==============================================================================
# EMAIL SERVICE (Resend)
# ==============================================================================
# Get API key from: https://resend.com/api-keys
# Used for sending reference invitations and notifications

RESEND_API_KEY=re_123456789abcdefghijklmnop

# ==============================================================================
# PAYMENTS (Stripe)
# ==============================================================================
# Get keys from: Stripe Dashboard → Developers → API keys
# STRIPE_SECRET_KEY: Use sk_test_... for testing, sk_live_... for production
# STRIPE_WEBHOOK_SECRET: Get from Stripe Dashboard → Webhooks

STRIPE_SECRET_KEY=sk_test_51234567890abcdefghijklmnop
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdefghijklmnop

# Optional: Stripe Price IDs for different plans
STRIPE_PRICE_ID_LIFETIME=price_1234567890
STRIPE_PRICE_ID_ANNUAL=price_0987654321

# ==============================================================================
# ADMIN & PERMISSIONS
# ==============================================================================
# HRKEY_SUPERADMIN_EMAIL: Email address to auto-assign superadmin role
# This user will have full access to admin features (company verification, etc.)

HRKEY_SUPERADMIN_EMAIL=admin@yourcompany.com

# ==============================================================================
# BLOCKCHAIN (Base Network) - Optional for Phase 2
# ==============================================================================
# Only needed if you're deploying smart contracts or using on-chain features

# Private key for deploying smart contracts (NEVER commit this!)
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Base Sepolia (Testnet)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_BASE_SEPOLIA_ID=84532

# Base Mainnet (Production)
BASE_MAINNET_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_MAINNET_ID=8453

# Basescan API key (for contract verification)
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY

# Deployed contract address (populated after deployment)
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ==============================================================================
# MACHINE LEARNING (Python Scripts)
# ==============================================================================
# These are used by the ml/ Python scripts for training and correlation analysis
# Create a separate ml/.env file with these values for the ML pipeline

# ML scripts need access to Supabase to read kpi_observations table
# Copy SUPABASE_URL and SUPABASE_SERVICE_KEY from above

# ==============================================================================
# OPTIONAL / FUTURE FEATURES
# ==============================================================================
# Coinbase Developer Platform (for Web3 features)
# NEXT_PUBLIC_CDP_API_KEY=your_cdp_api_key

# Legacy email service (if not using Resend)
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

################################################################################
# DEPLOYMENT CHECKLIST
################################################################################
#
# LOCAL DEVELOPMENT:
# ✅ Set PUBLIC_BASE_URL=http://localhost:3000
# ✅ Set API_BASE_URL=http://localhost:3001
# ✅ Set SUPABASE_URL, SUPABASE_ANON_KEY, SUPABASE_SERVICE_KEY
# ✅ (Optional) Set RESEND_API_KEY for testing emails
# ✅ (Optional) Set STRIPE_SECRET_KEY (use test mode)
#
# PRODUCTION (Vercel + Railway):
# ✅ Frontend (Vercel):
#    - Set PUBLIC_BASE_URL=https://hrkey.xyz
#    - Set NEXT_PUBLIC_SUPABASE_URL and NEXT_PUBLIC_SUPABASE_ANON_KEY
#    - Set STRIPE_SECRET_KEY (live mode)
#
# ✅ Backend (Railway/Render):
#    - Set API_BASE_URL=https://your-backend-url.railway.app
#    - Set SUPABASE_URL, SUPABASE_SERVICE_KEY
#    - Set RESEND_API_KEY
#    - Set STRIPE_SECRET_KEY and STRIPE_WEBHOOK_SECRET (live mode)
#    - Set HRKEY_SUPERADMIN_EMAIL
#    - Set PORT=3001 (or Railway auto-assigns)
#
# ✅ ML Pipeline (Python):
#    - Create ml/.env with SUPABASE_URL and SUPABASE_SERVICE_KEY
#    - Run scripts manually or via scheduled job (GitHub Actions, cron)
#
