{
  "name": "peerproof",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "hh": "hardhat",
    "compile": "hardhat compile && node copy-abi.cjs",
    "deploy:base-sepolia": "hardhat run scripts/deploy.js --network baseSepolia && node copy-abi.cjs",
    "verify:base-sepolia": "hardhat verify --network baseSepolia",
    "test": "jest -c jest.config.cjs",
    "test:unit": "ALLOW_TEST_AUTH_BYPASS=true NODE_OPTIONS=--experimental-vm-modules jest -c jest.config.cjs --selectProjects backend --testPathPattern=unit --coverage",
    "test:integration": "ALLOW_TEST_AUTH_BYPASS=true NODE_OPTIONS=--experimental-vm-modules jest -c jest.config.cjs --selectProjects backend --testPathPattern=integration --coverage",
    "test:frontend": "jest -c jest.config.cjs --selectProjects frontend",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:frontend"
  },
  "dependencies": {
    "@sentry/node": "^10.36.0",
    "@supabase/supabase-js": "^2.39.0",
    "cors": "^2.8.5",
    "ethers": "^6.13.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "micro": "^10.0.1",
    "next": "^15.5.10",
    "pg": "^8.16.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "stripe": "^14.10.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@openzeppelin/contracts": "^5.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/micro": "^7.3.7",
    "@types/node": "20.5.1",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/supertest": "^2.0.16",
    "babel-jest": "^30.2.0",
    "dotenv": "^16.6.1",
    "hardhat": "^3.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "typescript": "5.2.2"
  }
}
